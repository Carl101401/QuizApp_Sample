<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE057"
    tools:context=".AddVideoReviewer">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViews"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp" />

    <EditText
        android:id="@+id/videoNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViews"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/background"
        android:gravity="center"
        android:hint="Video Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#808080"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoNameEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:text="Select Video"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="@color/background" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/uploadVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectVideo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:enabled="false"
        android:text="Upload Video"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="@color/background" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ViewVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploadVideo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:text="View Video Reviewer"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@color/background" />

</RelativeLayout>

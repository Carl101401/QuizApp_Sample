<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE057"
    tools:context=".DifferentAddReviewers">
    <!-- android:background="@drawable/eight" -->


    <Button
        android:id="@+id/btnAddVideoReviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:backgroundTint="@color/background"
        android:padding="16dp"
        android:text="Add Video Reviewer"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnAddImageReviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddVideoReviewer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:backgroundTint="@color/white"
        android:padding="16dp"
        android:text="Add Image Reviewer"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnAddTextReviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddImageReviewer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:backgroundTint="@color/background"
        android:padding="16dp"
        android:text="Add Text Reviewer"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>

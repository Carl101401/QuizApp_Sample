<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE057"
    tools:context=".DifferentReviewers">
    <!-- android:background="@drawable/eight" -->

    <Button
        android:id="@+id/btnVideoReviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:backgroundTint="@color/background"
        android:padding="16dp"
        android:text="Video Reviewer"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnImageReviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnVideoReviewer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:backgroundTint="@color/background"
        android:padding="16dp"
        android:text="Image Reviewer"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnTextReviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnImageReviewer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/toolbarbackcolor_rounded"
        android:backgroundTint="@color/background"
        android:padding="16dp"
        android:text="Text Reviewer"
        android:textColor="#000000" />
</RelativeLayout>
